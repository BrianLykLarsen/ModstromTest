@using Modstrom.Library.Helpers
@using SquishIt.Framework
@using SquishIt.Mvc
@using Umbraco.Web
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
    var siteNode = Model.Content.GetSiteNode();
    
}<!doctype html>
 <html lang="@Html.Partial("SEO/ncSiteLanguage")"> 
    <head>
        <meta charset="utf-8">
        @Html.Partial("SEO/ncSiteSeo")
        
        <meta name="viewport" content="width=device-width,initial-scale=1">
        @Html.Raw(siteNode.GetPropertyValue<string>("scriptSiteHeader"))
        @Html.Raw(Model.Content.GetPropertyValue<string>("scriptPageHeader"))

        <link type="text/plain" rel="author" href="/humans.txt" />

       

        @(Bundle.Css()
            .Add("~/scripts/libs/flexslider/flexslider.css") 
            .Add("~/scripts/libs/perfect-scrollbar/perfect-scrollbar.css")
            .Add("~/less/master.less")
            //.ForceRelease() // enable if you want to squish it in debug=true
            .MvcRender("~/css/compiled/comb.min_#.css")
        )
        <!--[if lt IE 9]>
            <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
     <body>
         @Html.Partial("SEO/ncSiteGoogleAnalytics")
         @Html.Raw(siteNode.GetPropertyValue<string>("scriptSiteBodyTop"))
         @Html.Raw(Model.Content.GetPropertyValue<string>("scriptPageBodyTop"))
	    
         <div id="site">
             <header id="header">
                <figure id="logo">
                    <a href="/">
                        <img src="/images/logo.png" />
                    </a>
                </figure>
                <nav id="nav-container">
                    @Html.Partial("Sections/NavHeader")
                </nav>
                <div id="header-utilities"> 
                    <a id="header-basket" href="/"><span>0,00</span><i class="icon icon-basket"></i></a>
                    <a id="header-login" href="/"><span>Min side</span><i class="icon icon-login"></i></a>
                </div>
            </header>

            
            @RenderSection("mainContent") 
            

            <footer id="footer">
                @Html.Raw(Model.Content.GetPropertyValue<string>("footer",true,string.Empty))
            </footer>
         </div>
        
         @(Bundle.JavaScript()
            .Add("~/scripts/jquery-1.11.0.js")
            .Add("~/scripts/libs/modernizr.custom.js")
            .Add("~/scripts/libs/novicell.js")
            .Add("~/scripts/libs/novicell.responsive.js")
            
                           
            .Add("~/scripts/libs/flexslider/jquery.flexslider.js")
            .Add("~/scripts/libs/perfect-scrollbar/jquery.perfect-scrollbar.js")
            .MvcRender("~/scripts/compiled/comb.min_#.js")
        )
        
        <script type="text/javascript" src="/scripts/master.js"></script>

        @Html.Raw(siteNode.GetPropertyValue<string>("scriptSiteBodyBottom"))
        @Html.Raw(Model.Content.GetPropertyValue<string>("scriptPageBodyBottom"))
       
     </body>

</html>
